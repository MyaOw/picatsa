<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= truncate strip_tags(item.description), length: 80 %></td>
        <td><%= number_to_currency item.price, unit: "â‚¬", separator: ",", format: "%n%u" %></td>
        <td><%= image_tag item.image, width: 150 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

