<!-- ORDER-AREA START -->
			<div class="shopping-cart-area  pt-80 pb-80">
				<div class="container">
					<div class="row">
						<div class="col-md-12 col-sm-12 col-xs-12">
							<div class="shopping-cart">
								<!-- Nav tabs -->
								<ul class="cart-page-menu row clearfix mb-30">
				                	<li><%= link_to "Panier", cart_path %></li>
					                <li><%= link_to "Coordonnées", "#" %></li>
					                <li class="active"><%= link_to "Confirmation", recap_path %></li>
									<li><%= link_to "Merci !", complete_path %></li>
								</ul>

								<!-- Tab panes -->
								<div class="tab-content">
									<!-- shopping-cart start -->
									<div class="tab-pane active" id="confirmation">
											<div class="shop-cart-table">
												<div class="table-content table-responsive">
													<table>
														<thead>
															<tr>
																<th class="product-thumbnail">Produit</th>
																<th class="product-price">Prix</th>
																<th class="product-quantity">Quantité</th>
																<th class="product-subtotal">Total</th>
															</tr>
														</thead>
														<tbody>
															<% for @item_in_cart in @cart.items %>
																<%= render 'shared/cart_item', item_in_cart: @item_in_cart, edit_quantity: false, edit_remove: false %>
															<% end %>
														</tbody>
													</table>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6 col-sm-6 col-xs-12">
													<div class="customer-login mt-30">
													</div>
												</div>
												<div class="col-md-6 col-sm-6 col-xs-12">
													<div class="customer-login payment-details mt-30 mb-30">
														<h4 class="title-1 title-border text-uppercase">détails</h4>
														<table>
															<tbody>
																<tr>
																	<td class="text-left">Sous-total</td>
																	<td class="text-right"><%= @cart.total %> €</td>
																</tr>
																<tr>
																	<td class="text-left">Livraison</td>
																	<td class="text-right">0.00 €</td>
																</tr>
																<tr>
																	<td class="text-left">Total</td>
																	<td class="text-right"><%= @cart.total %> €</td>
																</tr>
															</tbody>
														</table>
                            <div class="stripe">

															<%= form_tag charges_path do %>

																<div class="stripe-button-container">
																	<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
																					data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
																					data-description="A month's subscription"
																					data-amount="<%= @cart.total * 100 %>"
																					dat-currency="eur"
																					data-locale="auto"></script>
																	<button class="stripe-button" type="submit" style="visibility: visible;"></button>
																</div>
															<% end %>
                            </div>
													</div>
												</div>
											</div>
									</div>
									<!-- shopping-cart end -->
								</div>
              </div>
            </div>
          </div>
        </div>
      </div>
