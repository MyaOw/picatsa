<div class="widget-title">
  <h4>Couleur</h4>
</div>
<div class="widget-info color-filter clearfix">
  <ul>
    <%for color in @colors%>
    <li>
      <%= link_to color_path(color: color.id) do %>
        <span class="color <%= color.color %>"></span><%= color.title %>

      <% end %>
    </li>
    <%end%>

  </ul>
</div>
