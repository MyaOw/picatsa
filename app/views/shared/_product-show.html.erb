<!-- PRODUCT-AREA START -->
			<div class="product-area single-pro-area pt-80 pb-80 product-style-2">
				<div class="container">	
					<div class="row shop-list single-pro-info no-sidebar">
						<!-- Single-product start -->
						<div class="col-lg-12">
							<div class="single-product clearfix">
								<!-- Single-pro-slider Big-photo start -->
								<div class="single-pro-slider single-big-photo view-lightbox slider-for">
									<div>
										<%= image_tag @item.image %>
										<a class="view-full-screen" href="<%= @item.image %>" data-lightbox="roadtrip" data-title="My caption">
											<i class="zmdi zmdi-zoom-in"></i>
										</a>
									</div>
								</div>	
								<!-- Single-pro-slider Big-photo end -->								
								<div class="product-info">
									<div class="fix">
										<h4 class="post-title floatleft"><%= @item.title %></h4>
									</div>
									<div class="fix mb-20">
										<span class="pro-price"><%=number_to_currency @item.price, unit: "â‚¬", separator: ",", format: "%n %u" %> </span>
									</div>
									<div class="product-description">
										<p><%= @item.description %></p>
									</div>
									<div class="clearfix">
										<div class="product-action clearfix">
											<%= link_to add_item_in_cart_path(@item.id), remote: true, toggle: "tooltip", placement: "top"  do %>
					                            <i class="zmdi zmdi-shopping-cart-plus caddie"></i>  Ajouter au panier
					                        <% end %>
										
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- Single-product end -->
					</div>
					
				</div>
			</div>
			<!-- PRODUCT-AREA END -->